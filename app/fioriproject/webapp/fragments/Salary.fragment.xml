<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:forms="sap.ui.layout.form"
>
    <forms:SimpleForm
        id="idSalaryForm"
        layout="ColumnLayout"
        width="100%"
        editable="false"
        columnsM="2"
        columnsL="3"
        columnsXL="4"
        binding="{salary}"
    >
    <Label
            id="idCTCLabel"
            text="costToCompany"
        />
        <Text
            id="idCTCText"
            text="{costToCompany}"
        />
        <Label
            id="idemployeePfLabel"
            text="employeePf"
        />
        <Text
            id="idemployeePfText"
            text="{employeePf}"
        />
        <Label
            id="idemployerPfLabel"
            text="employerPf"
        />
        <Text
            id="idemployerPfText"
            text="{employerPf}"
        />
        <Label
            id="idnpsfLabel"
            text="nps"
        />
        <Text
            id="idnpsText"
            text="{nps}"
        />
        <Label
            id="idvpffLabel"
            text="vpf"
        />
        <Text
            id="idvpfText"
            text="{vpf}"
        />

 </forms:SimpleForm>
</core:FragmentDefinition>
